<UserControl x:Class="WpfTest1_UserControlls.UserControlls.CustomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTest1_UserControlls.UserControlls"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="200"
             Background="Transparent"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Width="Auto"
             Height="Auto">
    <Grid x:Name="grdMain">
        <!-- Your custom grid content goes here -->
        <Border x:Name="brdBorder" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <Border.Effect>
                <BlurEffect Radius="10"/>
            </Border.Effect>
            <Rectangle Fill="Black" RadiusX="10" RadiusY="10"/>
        </Border>
        <Button Margin="10" x:Name="btnSend" Content="Send Message to Clients" Background="LightBlue">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</UserControl>